// tsconfig.app.json — конфиг, специфичный для приложения (например, React-клиент), 
// часто расширяет tsconfig.json, чтобы переопределить настройки или включить нужные файлы.
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        // ...
        "jsx": "react-jsx", // или "react-jsxdev" для dev
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
        // ...
    }
}